 @model IEnumerable<RocketLeague.Models.GoalListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Goals</h2>

<p>
    <a href="~/Goal/Create" class="custombtn">Create</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GoalID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GoalName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GoalColor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GoalRarity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GoalID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GoalName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GoalColor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GoalRarity)
        </td>
        <td>
            <a href="~/Goal/Edit/@item.GoalID" class="custombtn">Edit</a> |
            <a href="~/Goal/Delete/@item.GoalID" class="custombtn">Delete</a>
        </td>
    </tr>
}

</table>
