@model IEnumerable<RocketLeague.Models.BuildListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Builds</h2>

<p>
    <a href="~/Build/Create" class="custombtn">Create</a>
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.BuildID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BuildName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DecalName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WheelsName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GoalName)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{
                    if (item.FileContent != null)
                    {
                        var base64 = Convert.ToBase64String(item.FileContent);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                        <img src=@imgSrc , class="carimg" />
                    }
                    else
                    {
                        <img src="" />
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuildID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuildName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DecalName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WheelsName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoalName)
            </td>
            <td>   
                <a href="~/Build/Edit/@item.BuildID" class="custombtn">Edit</a> |
                <a href="~/Build/Delete/@item.BuildID" class="custombtn">Delete</a>

            </td>
        </tr>
    }

</table>
