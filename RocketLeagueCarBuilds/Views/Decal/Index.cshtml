@model IEnumerable<RocketLeague.Models.DecalListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Decals</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DecalID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DecalName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DecalColor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DecalRarity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DecalID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DecalName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DecalColor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DecalRarity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DecalID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DecalID })
        </td>
    </tr>
}

</table>
